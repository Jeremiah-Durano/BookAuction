{% extends 'no-sidebar.html.twig' %}

{% block title %}Book{% endblock %}
{% block pageHeader %}Book{% endblock %}
{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}"><button type="button" class="btn btn-primary btn-sm" >Back to list</button></a>

    <a href="{{ path('book_edit', {'id': book.id}) }}"><button type="button" class="btn btn-primary btn-sm" >Edit</button></a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
