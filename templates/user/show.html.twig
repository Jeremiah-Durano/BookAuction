{% extends 'no-sidebar.html.twig' %}

{% block title %}Show{% endblock %}
{% block pageHeader %}Show Page{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>User</h1>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Username</th>
                                <td>{{ user.username }}</td>
                            </tr>
                            <tr>
                                <th>Roles</th>
                                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            </tr>
                            <tr>
                                <th>Password</th>
                                <td>{{ user.password }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('user_index') }}"><button type="button" class="btn btn-primary btn-sm" >Back to list</button></a>

                    <a href="{{ path('user_edit', {'id': user.id}) }}"><button type="button" class="btn btn-primary btn-sm" >Edit</button></a>

                   {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
